
<a href="<%= bands_url%>">All Bands</a>
<h3>Create a new album</h3>

<form action="<%= albums_url %>" method = "POST">
  <%= auth_token %>
  <label for="name">Album Name</label>
  <input type="text" id="name" name="album[title]">
  <br>

  <label for="yr">Album Year</label>
  <input type="number" id="yr" name="album[yr]">
  <br>

  <label for="band">Band</label>
  <select name="album[band_id]" id="band">
    <% Band.all.each do |band| %>
      <% if band.name == @album.band.name %>
        <option value="<%= band.id %>" selected><%= band.name %></option>
      <% else %>
        <option value="<%= band.id %>"><%= band.name %></option>
      <% end %>
    <% end %>
  </select>
  <br>

  <input type="radio" name="album[studio]" value="t" checked> Studio
  <input type="radio" name="album[studio]" value="f"> Live
  <br>  

  <input type="submit" value="Create Album">
</form>